<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/equipment_run_state_submit_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="设备运行无异常、异味。"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/equipment_run_state_submit_item_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/equipment_run_state_submit_item_radio_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:checked="true"
            android:text="是"
            android:textColor="@color/colorGray_6" />

        <RadioButton
            android:id="@+id/equipment_run_state_submit_item_radio_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="否"
            android:textColor="@color/colorGray_6" />
    </RadioGroup>

</LinearLayout>